<header id="header">
  <% unless drop.subscribed? %>
    <h1><a href="http://store.getcloudapp.com/?utm_source=viso&utm_medium=ribbon&utm_campaign=viso-1.0">Simple sharing</a></h1>
  <% end %>

  <h2><%= escape_html drop.name %></h2>

  <a class="embed" href="<%= drop.content_url %>">Direct link</a>
</header>

<section id="content">
  <script>var imageLoadStart = new Date();</script>
  <img alt="<%= escape_html drop.name %>" src="<%= drop.content_url %>">
  <script>
    (function() {
      $('img')
        .load(function() {
          Metriks.record("image-load", new Date() - imageLoadStart);
        })
        .error(function() {
          Metriks.record("image-error");
        });
    }());
  </script>
</section>
