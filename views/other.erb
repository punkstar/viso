<div class="wrapper">
  <section id="content">
    <figure class="<%= drop.item_type %>"></figure>

    <h2><%= escape_html drop.name %></h2>

    <p>
      <a href="<%= drop.download_url %>">Download</a>
    </p>
    
    <div class="view">
      or <a href="<%= drop.content_url %>">view</a> in your browser.
    </span>
  </section>

  <% unless drop.subscribed? %>
    <footer id="footer">
      <h1><a href="http://store.getcloudapp.com/">Simple sharing</a></h1>
    </footer>
  <% end %>
</div>
